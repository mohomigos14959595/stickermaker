<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/entername"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#e65858"
        android:backgroundTint="#dbc6c6"
        android:gravity="center"
        android:hint="write your name here"
        android:layout_weight="1"/>

    <Switch
        android:text="I am male"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switchmale" />

    <ImageView
        android:id="@+id/finalimage"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginTop="16dp"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/textviewfinal"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
android:layout_weight="1"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="3"

        >

        <ImageView
            android:id="@+id/firsleftimage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#666"
            android:onClick="laugh"
            android:src="@drawable/stickerlagh" />

        <ImageView
            android:id="@+id/firscenterimage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#666"
            android:onClick="cry"
            android:src="@drawable/stickercry"/>

        <ImageView
            android:id="@+id/firsrightimage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="#666"
            android:onClick="look"
            android:src="@drawable/stickerlooking" />


    </LinearLayout>


</LinearLayout>